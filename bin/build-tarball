#!/bin/sh -e

export RAILS_ENV=production
output="$1"

if [ -z "$output" ]; then
  echo "Usage: $0 /path/to/output.tar"
  exit -1
fi

rm -rf output
mkdir -p output
git archive HEAD | tar x -C output

bundle install
npm install
./bin/rails assets:precompile
mv public/assets output/public/assets

cd output
sed -i.bak 's/development/production/g' run
bundle install --deployment --without development test assets
cd ..

tar cf $output -C output . 
rm -rf output
